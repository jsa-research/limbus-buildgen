{
  "name": "limbus-buildgen",
  "version": "0.1.0",
  "description": "A \"build anywhere\" build system.",
  "main": "duk limbus-buildgen.js",
  "directories": {},
  "devDependencies": {
    "blanket": "1.1.6",
    "coveralls": "2.11.2",
    "lcov-result-merger": "1.0.0",
    "mocha-lcov-reporter": "0.0.1",
    "should": "5.0.1",
    "travis-cov": "0.2.5",
    "mocha": "2.4.5"
  },
  "scripts": {
    "test": "mocha \"**/*.unit.js\" \"**/*.feature.js\"",
    "coverage-travis-ci": "mocha --require blanket -R travis-cov \"**/*.unit.js\" \"**/*.feature.js\"",
    "coverage-coveralls-io": "./utility-scripts/coveralls.sh",
    "coverage": "mocha --require blanket -R html-cov \"**/*.unit.js\" \"**/*.feature.js\" > coverage.html",
    "unit-test": "mocha \"**/*.unit.js\"",
    "integration-test": "mocha \"**/*.feature.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/redien/limbus-buildgen"
  },
  "keywords": [
    "build",
    "system",
    "make",
    "project",
    "generator"
  ],
  "author": "Jesper Oskarsson <jesosk@gmail.com>",
  "license": "Public Domain",
  "bugs": {
    "url": "https://github.com/redien/limbus-buildgen/issues"
  },
  "homepage": "https://github.com/redien/limbus-buildgen",
  "config": {
    "blanket": {
      "pattern": [
        "/source/",
        "/features/",
        "/units/"
      ]
    },
    "travis-cov": {
      "threshold": 90
    }
  }
}
